@page
@model IndexModel
@{
    ViewData["Title"] = "Inmobiliaria HogarIdeal";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Bienvenido a HogarIdeal</h1>
        <p class="lead">Tu hogar soñado está más cerca de lo que piensas.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://images.unsplash.com/photo-1572120360610-d971b9b78827?auto=format&fit=crop&w=800&q=60" class="card-img-top" alt="Casa moderna">
                <div class="card-body">
                    <h5 class="card-title">Casas familiares</h5>
                    <p class="card-text">Encuentra la casa perfecta para tu familia en zonas tranquilas y seguras.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=60" class="card-img-top" alt="Departamento">
                <div class="card-body">
                    <h5 class="card-title">Departamentos modernos</h5>
                    <p class="card-text">Vive cerca de todo con estilo, confort y seguridad.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?auto=format&fit=crop&w=800&q=60" class="card-img-top" alt="Casa de lujo">
                <div class="card-body">
                    <h5 class="card-title">Propiedades de lujo</h5>
                    <p class="card-text">Villas, mansiones y más. El lujo y la elegancia te esperan.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/Contact" class="btn btn-primary btn-lg">Contáctanos</a>
    </div>
</div>
